#!/bin/sh

CC="gcc"
CFLAGS="-std=c17 -o main"
SRC="src/*.c"

while [ $# -gt 0 ]; do
  key="$1"

  case $key in
    -d|--debug)
      CFLAGS="$CFLAGS -DDEBUG_TRACE_EXEC -DDEBUG_PRINT_CODE"
      DEBUG=1
      shift
      ;;
    *)
      echo "unrecognized build option: $1"
      shift
      ;;
  esac
done

${CC} ${CFLAGS} ${SRC}
