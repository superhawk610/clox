#!/bin/bash
set -e

CC="gcc"
CFLAGS="-std=c17 -o build/main"
SRC="src/*.c"
CLIBS="-lreadline"

while [[ $# -gt 0 ]]; do
  key="$1"

  case $key in
    -d|--debug)
      CFLAGS="$CFLAGS -g -DDEBUG_BACKTRACE -DDEBUG_TRACE_EXEC -DDEBUG_PRINT_CODE"
      shift
      ;;
    -v|--verbose)
      CFLAGS="$CFLAGS -v"
      shift
      ;;
    *)
      echo "unrecognized build option: $1"
      shift
      ;;
  esac
done

set -x

mkdir -p build

${CC} ${CFLAGS} ${SRC} ${CLIBS}

echo -e "\nsuccessfully built build/main"
