#!/bin/bash
set -e

CC="gcc"
CFLAGS="-std=c17 -g -lreadline -o build/__test__ -D__TESTING__"
SRC="src/*.c test/*.c"
CLIBS="-lreadline"

while [[ $# -gt 0 ]]; do
  key="$1"

  case $key in
    -d|--debug)
      CFLAGS="$CFLAGS -DDEBUG_BACKTRACE -DDEBUG_TRACE_EXEC -DDEBUG_PRINT_CODE"
      DEBUG=1
      shift
      ;;
    *)
      echo "unrecognized build option: $1"
      shift
      ;;
  esac
done

set -x

mkdir -p build

${CC} ${CFLAGS} ${SRC} ${CLIBS}

build/__test__
rm -rf ./__test__
